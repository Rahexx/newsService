extends ../layout

block content
    h1=title
    if errors.errors !== undefined
        each message in errors.errors
            p=message
    form(method='post')
        p
            label Tytul
            input(type='text' name='title' value=body.title || '')
        p
            label Opis
            textarea(name='description' value=body.description || '')
        p
            input(type= 'submit' value='Zapisz')